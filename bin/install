#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

username="USERNAME"
password="PASSWORD"
host="HOST"
port="PORT"
database_name="DATABASENAME"

echo "$host" > $OPENSHIFT_MYSQL_EXTERNAL_DIR/env/OPENSHIFT_MYSQL_EXTERNAL_DB_HOST
echo "$port" > $OPENSHIFT_MYSQL_EXTERNAL_DIR/env/OPENSHIFT_MYSQL_EXTERNAL_DB_PORT
echo "$username" > $OPENSHIFT_MYSQL_EXTERNAL_DIR/env/OPENSHIFT_MYSQL_EXTERNAL_DB_USERNAME
echo "$password" > $OPENSHIFT_MYSQL_EXTERNAL_DIR/env/OPENSHIFT_MYSQL_EXTERNAL_DB_PASSWORD
echo "$database_name" > $OPENSHIFT_MYSQL_EXTERNAL_DIR/env/OPENSHIFT_MYSQL_EXTERNAL_DB_NAME
echo "mysql://$username:$password@$host:$port/" > $OPENSHIFT_MYSQL_EXTERNAL_DIR/env/OPENSHIFT_MYSQL_EXTERNAL_DB_URL

echo 'Installing MySQL External'

client_result ""
client_result "MySQL 5.1 database added.  Please make note of these credentials:"
client_result ""
client_result "       Root User: $username"
client_result "   Root Password: $password"
client_result "   Database Name: $database_name"
client_result ""

client_result 'Connection URL: mysql://$host:$port/'
client_result ""

cart_props 'connection_url=mysql://$host:$port/'
cart_props "username=$username"
cart_props "password=$password"
cart_props "database_name=$database_name"
